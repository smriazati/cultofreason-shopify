{%- form 'customer', id: 'ContactFooter' -%}
    <input type="hidden" name="contact[tags]" value="newsletter">
    <div>
      <div>
        <input id="NewsletterForm--{{ section.id }}" type="email" name="contact[email]" 
          value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email"
          {% if form.errors %} autofocus aria-invalid="true" aria-describedby="ContactFooter-error" {% elsif
          form.posted_successfully? %} aria-describedby="ContactFooter-success" {% endif %}
          placeholder="Email" required>
        <label for="NewsletterForm--{{ section.id }}">
          Newsletter
        </label>
        <button type="submit" name="commit" id="Subscribe"
          aria-label="Subscribe to newsletter">
          Subscribe
        </button>
      </div>
      {%- if form.errors -%}
          <small id="ContactFooter-error">{{form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
      {%- endif -%}
    </div>
    {%- if form.posted_successfully? -%}
      <h3 id="ContactFooter-success" tabindex="-1" autofocus>Thanks for signing up for the newsletter!</h3>
    {%- endif -%}
  {%- endform -%}