{%- style -%}
body.template-index {
  background: #000;
   position: relative;
  max-height: 100vh;
  overflow-y: hidden;
  overflow-x: hidden;
}
body.template-index .site-main {
  background: #000;
  max-height: 100vh;
  overflow: hidden;
}

body.template-index .page-container h1, 
body.template-index .page-container h2 {
    max-width: 100%;
    width: 100%;
    position: relative;
}

body.template-index .page-container {
    padding: 60px 0;
}
.index-main-button {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 4px 0;
}
.index-main-button p {
  font-weight: 700;
  font-size: 12px;
  line-height: 80%;
  letter-spacing: 0.02em;
  text-transform: uppercase;
}

.index-main-button > a,
.index-main-button a > span {
    align-items: center;
}
.index-main-button a > span > *:not(last-child) {
    margin-right: 24px;
}
.gsap-animate-in {
  opacity: 0;
}

.bg-img {
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}


@keyframes marqueeOne {
	0% {
		transform: translate3d( calc(-25% + 20vw), 0, 0);
	}

	100% {
		transform: translate3d(calc(-50% + 20vw), 0, 0);
	}
}
	

.marquee {
	/* position: relative; */
	overflow: hidden;
	--offset: 20vw;
	--move-initial: calc(-25% + var(--offset));
	--move-final: calc(-50% + var(--offset));
}
.marquee_inner {
	width: fit-content;
	display: flex;
	position: relative;
	white-space: nowrap;
	transform: translate3d(var(--move-initial), 0, 0);
	animation: marqueeOne 8s linear infinite;
}

{%- endstyle -%}

