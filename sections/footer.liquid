<footer class="site-footer">
  <div class="site-footer-wrapper footer-grid page-container">
    <div class="footer-menus-wrapper flex-row">
      <div>
        <nav>
          {%- if section.settings.menu_title_1 != blank -%}
            <h3 class="text-footer-title">{{ section.settings.menu_title_1 }}</h3>
          {%- endif -%}
          <ul class="text-footer-list">
            {% for link in linklists.footer.links %}
                <li class="menu-link">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
      <div>
        <nav>
          {%- if section.settings.menu_title_2 != blank -%}
            <h3 class="text-footer-title">{{ section.settings.menu_title_2 }}</h3>
          {%- endif -%}
          <ul class="text-footer-list">
            {% for link in linklists.footer-menu-2.links %}
                <li class="menu-link">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
      <div>
        <nav>
          {%- if section.settings.menu_title_3 != blank -%}
            <h3 class="text-footer-title">{{ section.settings.menu_title_3 }}</h3>
          {%- endif -%}
          <ul class="text-footer-list">
            {% for link in linklists.footer-menu-3.links %}
                <li class="menu-link">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
      <div>
        <nav>
          {%- if section.settings.menu_title_4 != blank -%}
            <h3 class="text-footer-title">{{ section.settings.menu_title_4 }}</h3>
          {%- endif -%}
          <ul class="text-footer-list">
            {% for link in linklists.footer-menu-4.links %}
                <li class="menu-link">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </div>
    <div class="footer-newsletter-signup">
      <div class="text-wrapper">
          {%- if section.settings.newsletter_heading != blank -%}
              <h2 class="text-footer-title">{{ section.settings.newsletter_heading | escape }}</h2>
          {%- endif -%}
          {%- if section.settings.newsletter_text != blank -%}
          <h2 class="text-footer-newsletter-text">{{ section.settings.newsletter_text | escape }}</h2>
          {%- endif -%}
      </div>
      <div class="form-wrapper">
        {%- render 'newsletter-signup' -%}    
      </div>
    </div>
    <div class="footer-copyright flex-row flex-align-end">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: '/', class: 'link-plain' }}.</p>
        <p><a href="https://otherlove.co" class="link-plain">Made with Otherlove.</a></p>
    </div>
    <div class="footer-back-to-top">
      <button aria-label="Back to top" onClick="scrollToTop()">{%- render 'icon-arrow-up' -%}</button>
    </div>
  </div>
</footer>

{% style %}
.site-footer {
  border-top: 1px solid var(--volcano-300);
  padding: 20px;
  position: relative;
  z-index: 99;
}

.footer-grid {
  display: grid;
  grid-auto-rows: auto;
}

.footer-grid .footer-menus-wrapper {
  width: 100%;
}

.footer-grid .footer-back-to-top {
  text-align: right;
} 

.site-footer .footer-menus-wrapper > * {
  flex: 0 0 25%;
}

.site-footer .footer-menus-wrapper h3 {
  margin-bottom: 14px;
}

.site-footer-wrapper .footer-newsletter-signup .text-wrapper {
  margin-bottom: 15px;
} 
.site-footer-wrapper .footer-newsletter-signup .text-wrapper > *:first-child {
  margin-bottom: 6px;
} 

.site-footer-wrapper .footer-copyright p {
  font-size: 11px;
  font-weight: 700;
  line-height: 13px;
  margin-right: 1ch;
}


@media (min-width: 801px) {
  .footer-grid {
    grid-template-columns: repeat(12, 1fr);
    grid-row-gap: 20px;
  }

  .footer-grid .footer-menus-wrapper {
    grid-column: 1 / span 4;
    grid-row: 1 / 2;
  }
  .footer-grid .footer-newsletter-signup {
    grid-column: 8 / span 4;
    grid-row: 1 / 2;
  } 

  .footer-grid .footer-copyright {
    grid-column: 1 / span 6;
    grid-row: 2 / 3;
  } 

  .footer-grid .footer-back-to-top {
    grid-column: span 3 / 13;
    grid-row: 2 / 3;
  } 
}


@media (max-width: 800px) {
  .footer-grid {
    grid-template-columns: repeat(3, 1fr);
    grid-row-gap: 40px;
  }

  .footer-grid .footer-menus-wrapper {
    grid-column: 1 / 4;
    grid-row: 1 / 2;
  }
  .footer-grid .footer-newsletter-signup {
    grid-column: 1 / 4;
    grid-row: 2 / 3;
    text-align: center;
  } 
  .footer-grid .footer-newsletter-signup .newsletter-input {
    justify-content: center;
  }

  .footer-grid .footer-copyright {
    grid-column: 1 / 4;
    grid-row: 3 / 4;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    width: 100%;
  } 
  .footer-grid .footer-copyright p {
    width: 100%;
  } 

  .footer-grid .footer-copyright p + p {
    margin-top: 4px;
  } 

  .footer-grid .footer-back-to-top {
    grid-column: 3 / 4;
    grid-row: 1 / 2;
    align-self: start;
  } 
}
@media (max-width: 600px) {
  .site-footer .footer-menus-wrapper {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  .site-footer .footer-menus-wrapper > * {
    flex: 100%;
  }
  .site-footer .footer-menus-wrapper > *:not(:last-child) {
    margin-bottom: 24px;
  }
}

body.template-index .site-footer {
  display: none;
}
{% endstyle %}

