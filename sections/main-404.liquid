<div class="page-container">
  <h1 class="h1 text-center">{{ section.settings.text }}</h1>
  <h2 class="h3 text-center">Shop</h2>
  <div class="flex-row flex-center">
    {% for product in collections['404'].products %}
      <a href="{{ product.url }}">
        <img src="{{ product.featured_image | image_url }}" alt="{{ product.featured_image.alt }}" width=207 height=276 loading="lazy" class="object-cover">
      </a>
    {% endfor %}
  </div>
</div>


{%- render 'dark-mode-styles' -%%}

<style>
  .site-main {
    background: url({{ section.settings.bg_img | image_url }}) no-repeat fixed center center;
    background-size: cover;
  }
</style>

{% schema %}
{
  "name": "404",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "text",
      "default": "You’ve lost your way. Let’s get back on track.",
      "label": "Text"
    }
  ]
}
{% endschema %}